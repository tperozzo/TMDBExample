<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.perozzo.tmdbexample.activities.DetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/question_cv"
                android:orientation="vertical"
                android:elevation="8dp"
                android:layout_margin="8dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/movie_ll"
                    android:orientation="vertical">

                    <FrameLayout
                        android:id="@+id/frame_layout"
                        android:layout_width="match_parent"
                        android:layout_height="240dp">

                        <ImageView
                            android:id="@+id/backdrop_image_iv"
                            android:layout_width="match_parent"
                            android:layout_height="240dp"
                            android:background="@color/grey" />

                        <ProgressBar
                            android:id="@+id/backdrop_image_pb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:indeterminate="true"
                            android:layout_gravity="center"/>

                    </FrameLayout>

                    <TextView
                        android:id="@+id/title_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/title"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:layout_margin="8dp"/>

                    <TextView
                        android:id="@+id/vote_average_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/vote_average"
                        android:textSize="16dp"
                        android:layout_margin="8dp"/>

                    <TextView
                        android:id="@+id/vote_count_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/vote_count"
                        android:textSize="16dp"
                        android:layout_margin="8dp"/>

                    <TextView
                        android:id="@+id/overview_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/overview"
                        android:textSize="16dp"
                        android:layout_margin="8dp"/>


                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
